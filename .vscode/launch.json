{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "cloudcode",
        "request": "attach",
        "name": "Debug on Kubernetes (frontend)",
        "language": "Python",
        "debugPort": 3000,
        "localRoot": "${workspaceFolder}/frontend",
        "remoteRoot": "/app",
        "podSelector": {
          "app": "python-garage",
          "tier": "frontend"
        }
      },
      {
        "type": "cloudcode",
        "request": "attach",
        "name": "Debug on Kubernetes (backend)",
        "language": "Python",
        "debugPort": 3000,
        "localRoot": "${workspaceFolder}/backend",
        "remoteRoot": "/app",
        "podSelector": {
          "app": "python-garage",
          "tier": "backend"
        }
      }
    ]
  }
  